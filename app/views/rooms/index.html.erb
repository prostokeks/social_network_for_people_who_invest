<div>
  <h5><%= current_user.email %></h5>
  <h4>Users</h4>
  <%= turbo_stream_from "users" %>
  <div id="users">
    <%= render @users %>
  </div>
  <h4>Rooms</h4>
  <%= turbo_stream_from "rooms" %>
  <div id="rooms">
    <%= render @rooms %>
  </div>
</div>
<%= render "rooms/new_room_form" %>

<% if @single_room %>
<div id="single_room">
  <h4 class="text-center"><%= @user&.email || @single_room.name %></h4>
  <%= turbo_stream_from @single_room %>
  <div id="messages">
    <%= render @messages %>
  </div>
</div>
<% end %>