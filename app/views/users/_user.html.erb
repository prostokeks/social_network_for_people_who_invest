<div class="px-5 py-4 flex items-center cursor-pointer border-l-4 border-l-transparent hover:bg-slate-100">
  <%= link_to(user_path(user.id), class:"flex items-center p-2 text-base font-normal rounded-lg") do %>
    <% if user.avatar.attached? %>
      <%= image_tag user.avatar, class: "h-12 w-12 rounded-full ring ring-blue-500" %>
    <% else %>
      <img class="inline h-12 w-12 rounded-full ring ring-blue-500" src="https://st2.depositphotos.com/47577860/46283/v/450/depositphotos_462836132-stock-illustration-assassin-deadpool-face-icon.jpg" alt="">
    <% end %>
    <div class="ml-4">
      <p class="text-md font-semibold m-0 p-0"><%= user.name %> <%= user.last_name %></p>
    </div>
  <% end %>
</div>