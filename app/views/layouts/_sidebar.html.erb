<aside class="w-64" aria-label="Sidebar">
  <div class="overflow-y-auto py-4 px-3 rounded bg-gray-900">
    <div class="flex items-center pl-2 pt-2 pb-6 space-x-4 ">
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar, class: "w-12 h-12 rounded-full dark:bg-gray-500" %>
      <% else %>
        <img class="w-12 h-12 rounded-full dark:bg-gray-500" src="https://st2.depositphotos.com/47577860/46283/v/450/depositphotos_462836132-stock-illustration-assassin-deadpool-face-icon.jpg" alt="">
      <% end %>
      <div>
        <h2 class="text-lg font-semibold text-white"><%= current_user.name %> <%= current_user.last_name %></h2>
        <span class="flex items-center space-x-1">
        <%= link_to "View profile", static_pages_profile_path(current_user), class: "text-xs hover:underline dark:text-gray-400" %>
			</span>
      </div>
    </div>
