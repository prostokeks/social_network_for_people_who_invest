<%= form_with model: @new do |n| %>

  <%= render 'static_pages/errors', object: @new %>

  <div>
    <div>
      <%= n.label :title %>
    </div>
    <div>
      <%= n.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div>
    <div>
      <%= n.label :body %>
    </div>
    <div>
      <%= n.text_field :body, class: "form-control" %>
    </div>
  </div>
  <div>
    <%= n.label :avatar %>
    <%= n.file_field :avatar %>
  </div>
  <div>
    <%= n.label :category %>
    <%= n.collection_check_boxes :category_ids, Category.all, :id, :name do |c| %>
      <div class="collection-check-box">
        <%= c.check_box %>
        <%= c.label %>
      </div>
    <% end %>
  </div>
  <%= n.submit "Submit" %>
<% end %>