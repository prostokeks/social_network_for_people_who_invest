<%= render "static_pages/search" %>

<% @news.each do |n| %>
  <% if n.avatar.attached? %>
    <p><%= image_tag n.avatar, width: "200px" %></p>
  <% end %>
  <p><%= n.title %></p>
  <p><%= n.body %></p>
  <p><%= n.user_id %></p>
  <p><%= n.categories.map(&:name).sort.join(", ") %></p>
  <p><%= link_to "Show", news_path(n) %></p>
  <p><%= link_to "Edit", edit_news_path(n) %></p>
  <p><%= link_to "Delete", news_path(n), data: {"turbo-method": :delete,
                                                turbo_confirm: "You sure?"} %></p>
<% end %>

<%= link_to "New", new_news_path %>