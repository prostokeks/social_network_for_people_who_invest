<fieldset class="search-field">
  <legend>Search</legend>
  <%= search_form_for @search do |s| %>
    <div>
      <%= s.label :category %><br/>
      <%= s.collection_check_boxes :categories_id_in_any, Category.all, :id, :name do |c| %>
        <div class="collection-check-box">
          <%= c.check_box %>
          <%= c.label %>
        </div>
      <% end %>
    </div>
    <div class="actions">
      <%= s.submit "Search" %>
    </div>
  <% end %>
</fieldset>
<% @news.each do |n| %>
  <% if n.avatar.attached? %>
    <p><%= image_tag n.avatar, width: "200px" %></p>
  <% end %>
  <p><%= n.title %></p>
  <p><%= n.body %></p>
  <p><%= n.user_id %></p>
  <p><%= n.categories.map(&:name).sort.join(", ") %></p>
  <p><%= link_to "Show", news_path(n) %></p>
  <p><%= link_to "Edit", edit_news_path(n) %></p>
  <p><%= link_to "Delete", news_path(n), data: {"turbo-method": :delete,
                                                turbo_confirm: "You sure?"} %></p>
<% end %>

<%= link_to "New", new_news_path %>