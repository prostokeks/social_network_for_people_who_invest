<%= form_with model: @forum do |f| %>

  <%= render 'static_pages/errors', object: @forum %>

  <div>
    <div>
      <%= f.label :title %>
    </div>
    <div>
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :body %>
    </div>
    <div>
      <%= f.text_field :body, class: "form-control" %>
    </div>
  </div>
  <div>
    <%= f.label :status %>
    <%= f.select :status, Forum::STATUS %>
  </div>
  <div>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>
  <div>
    <%= f.label :category %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |c| %>
      <div class="collection-check-box">
        <%= c.check_box %>
        <%= c.label %>
      </div>
    <% end %>
  </div>
  <%= f.submit "Submit" %>
<% end %>